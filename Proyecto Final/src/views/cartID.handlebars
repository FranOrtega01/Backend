<h3>Cart ID: {{this._id}}</h3>
<table class="table table-dark table-striped table-hover">
    <tr>
        <td><strong>Producto</strong></td>
        <td><strong>Precio</strong></td>
        <td><strong>Cantidad</strong></td>
        
    </tr>
        {{#each products}}
        <tr>
            {{#id}}
            <td>{{title}}</td>
            <td>${{price}}</td> 
            {{/id}}
            <td>{{this.quantity}}</td>
        </tr>
        {{/each}}  
</table>

<div class="d-flex">
    <a class="btn btn-dark me-2" href="/session/profile">Go back</a>
    <form action="{{this._id}}/purchase" method="post">
        <input class="btn btn-primary" id="formSubmit" type="submit" value="Terminar compra">
    </form>
</div>

