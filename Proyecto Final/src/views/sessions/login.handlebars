<section class="row justify-content-center">
    <h1 class="text-center my-3">Iniciar Sesión</h1>
    <div class="card p-3" style="width: 22rem;">
        <form class="row justify-content-center" action="/session/login" method="post">
            <div class="form-group my-2">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group my-2">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary my-3 col-10">Ingresar</button>
        </form>
        <a class="text-center" href="/session/password-reset">Olvidé mi contraseña</a>
        <p class="mt-3 text-center">¿No tienes una cuenta? <a href="/session/register">Crea una</a></p>
        <p class="text-center">o</p>
        <div class="row justify-content-center">
            <a class="m-1 col-10 btn btn-dark" href="/session/github"><i class="me-2 fa-brands fa-github"></i></i>Ingresa con GitHub</a>
            <a class="m-1 col-10 btn btn-danger" href="/session/google"><i class="me-2 fa-brands fa-google"></i></i>Ingresa con Google</a>
        </div>
    </div>
</section>
